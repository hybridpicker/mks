/* Overlay Menu Styles */

/* Trigger Button */
.mks-overlay-trigger {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 0.5rem;
  font-weight: 500;
  color: #374151;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.mks-overlay-trigger:hover {
  background: #f9fafb;
  border-color: #d1d5db;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.mks-overlay-trigger-icon {
  width: 1.25rem;
  height: 1.25rem;
  color: #6b7280;
}

/* User Info (always visible) */
.mks-navbar-user-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 1rem;
}

.mks-navbar-user-name {
  font-weight: 600;
  color: #111827;
  font-size: 0.875rem;
}

.mks-navbar-user-role {
  font-size: 0.75rem;
  color: #6b7280;
}

/* Overlay Menu */
.mks-overlay-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.mks-overlay-menu.is-open {
  opacity: 1;
  visibility: visible;
}

/* Backdrop */
.mks-overlay-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

/* Overlay Content */
.mks-overlay-content {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow-y: auto;
  background: #ffffff;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  max-width: 1200px;
  margin: 0 auto;
  z-index: 10000;
}

.mks-overlay-menu.is-open .mks-overlay-content {
  transform: translateX(0);
}

/* Header */
.mks-overlay-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 2rem;
  border-bottom: 1px solid #e5e7eb;
  background: #f9fafb;
}

.mks-overlay-header h2 {
  font-size: 1.5rem;
  font-weight: 700;
  color: #111827;
  margin: 0;
}

.mks-overlay-close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  background: #ffffff;
  border: 1px solid #d1d5db;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.mks-overlay-close:hover {
  background: #f3f4f6;
  border-color: #9ca3af;
}

.mks-overlay-close svg {
  width: 1.25rem;
  height: 1.25rem;
  color: #6b7280;
}

/* User Section */
.mks-overlay-user-section {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 2rem;
  background: #f9fafb;
  border-bottom: 1px solid #e5e7eb;
}

.mks-overlay-user-avatar {
  width: 4rem;
  height: 4rem;
  background: #3b82f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.mks-overlay-user-avatar svg {
  width: 2rem;
  height: 2rem;
  color: #ffffff;
}

.mks-overlay-user-info {
  flex: 1;
}

.mks-overlay-user-info h3 {
  font-size: 1.25rem;
  font-weight: 700;
  color: #111827;
  margin: 0 0 0.25rem 0;
}

.mks-overlay-user-info p {
  color: #6b7280;
  margin: 0 0 0.5rem 0;
  font-size: 0.875rem;
}

.mks-overlay-user-badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  background: #3b82f6;
  color: #ffffff;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
}

.mks-overlay-user-actions {
  display: flex;
  gap: 0.5rem;
}

.mks-overlay-user-action {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: #ffffff;
  border: 1px solid #d1d5db;
  border-radius: 0.375rem;
  color: #374151;
  text-decoration: none;
  font-size: 0.875rem;
  transition: all 0.2s ease;
}

.mks-overlay-user-action:hover {
  background: #f3f4f6;
  border-color: #9ca3af;
  color: #111827;
}

.mks-overlay-user-action svg {
  width: 1rem;
  height: 1rem;
  color: currentColor;
}

/* Navigation Grid */
.mks-overlay-nav-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  padding: 2rem;
}

/* Navigation Sections */
.mks-overlay-nav-section {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 0.75rem;
  padding: 1.5rem;
  transition: all 0.2s ease;
}

.mks-overlay-nav-section:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  border-color: #d1d5db;
}

.mks-overlay-nav-section h3 {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.125rem;
  font-weight: 600;
  color: #111827;
  margin: 0 0 1rem 0;
  padding-bottom: 0.75rem;
  border-bottom: 2px solid #f3f4f6;
}

.mks-overlay-nav-section h3 svg {
  width: 1.25rem;
  height: 1.25rem;
  color: #3b82f6;
}

/* Navigation Items */
.mks-overlay-nav-items {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.mks-overlay-nav-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  background: #f9fafb;
  border: 1px solid #f3f4f6;
  border-radius: 0.5rem;
  color: #374151;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
}

.mks-overlay-nav-item:hover {
  background: #3b82f6;
  border-color: #3b82f6;
  color: #ffffff;
  transform: translateY(-1px);
  box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.25);
}

.mks-overlay-nav-item svg {
  width: 1.25rem;
  height: 1.25rem;
  color: currentColor;
  flex-shrink: 0;
}

/* Statistics Section */
.mks-overlay-stats-section {
  grid-column: 1 / -1;
}

.mks-overlay-stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-top: 1rem;
}

.mks-overlay-stat-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: #f9fafb;
  border: 1px solid #f3f4f6;
  border-radius: 0.5rem;
  transition: all 0.2s ease;
}

.mks-overlay-stat-card:hover {
  background: #ffffff;
  border-color: #e5e7eb;
  box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.mks-overlay-stat-icon {
  width: 3rem;
  height: 3rem;
  background: #3b82f6;
  color: #ffffff;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.mks-overlay-stat-icon svg {
  width: 1.5rem;
  height: 1.5rem;
}

.mks-overlay-stat-content {
  flex: 1;
}

.mks-overlay-stat-number {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  color: #111827;
}

.mks-overlay-stat-label {
  display: block;
  font-size: 0.875rem;
  color: #6b7280;
}

/* Quick Actions */
.mks-overlay-quick-actions {
  display: flex;
  gap: 1rem;
  padding: 2rem;
  background: #f9fafb;
  border-top: 1px solid #e5e7eb;
  flex-wrap: wrap;
}

.mks-overlay-quick-action {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.2s ease;
  cursor: pointer;
  border: none;
  font-family: inherit;
  font-size: 0.875rem;
}

.mks-overlay-action-primary {
  background: #3b82f6;
  color: #ffffff;
}

.mks-overlay-action-primary:hover {
  background: #2563eb;
  box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.25);
}

.mks-overlay-action-secondary {
  background: #10b981;
  color: #ffffff;
}

.mks-overlay-action-secondary:hover {
  background: #059669;
  box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.25);
}

.mks-overlay-action-danger {
  background: #dc2626;
  color: #ffffff;
}

.mks-overlay-action-danger:hover {
  background: #b91c1c;
  box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.25);
}

.mks-overlay-quick-action svg {
  width: 1rem;
  height: 1rem;
  color: currentColor;
}

/* Responsive Design */
@media (max-width: 768px) {
  .mks-overlay-content {
    width: 100%;
    max-width: none;
  }
  
  .mks-overlay-nav-grid {
    grid-template-columns: 1fr;
    padding: 1rem;
  }
  
  .mks-overlay-user-section {
    padding: 1rem;
    flex-direction: column;
    text-align: center;
  }
  
  .mks-overlay-user-actions {
    justify-content: center;
  }
  
  .mks-overlay-quick-actions {
    flex-direction: column;
    padding: 1rem;
  }
  
  .mks-overlay-header {
    padding: 1rem;
  }
}

/* Animation Keyframes */
@keyframes slideInRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes slideOutRight {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(100%);
  }
}

/* Focus States for Accessibility */
.mks-overlay-trigger:focus,
.mks-overlay-close:focus,
.mks-overlay-nav-item:focus,
.mks-overlay-user-action:focus,
.mks-overlay-quick-action:focus {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

/* Loading States */
.mks-overlay-nav-item.loading {
  opacity: 0.6;
  pointer-events: none;
}

.mks-overlay-nav-item.loading::after {
  content: '';
  width: 1rem;
  height: 1rem;
  border: 2px solid currentColor;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-left: auto;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
